{
  "codeLens.enable": true,
  "coc.preferences.formatOnType": true,

  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.autoTrigger": "always",
  "suggest.detailField": "abbr",
  "suggest.echodocSupport": true,
  "suggest.enablePreselect": true,
  "suggest.enablePreview": false,
  "suggest.fixInsertedWord": true,
  "suggest.floatEnable": false,
  "suggest.localityBonus": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.noselect": false,
  "suggest.snippetIndicator": " >",
  "suggest.timeout": 2000,
  "suggest.triggerAfterInsertEnter": true,

  "diagnostic.hintSign": "?",
  "diagnostic.errorSign": "x",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "â€¢",

  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " >> ",
  "diagnostic.messageDelay": 1000,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.virtualTextCurrentLineOnly": false,

  "emmet.includeLanguages": {
    "html": "html",
    "php": "html",
    "gohtmltmpl": "html",
    "markdown": "html",
    "vue-html": "html",
    "css": "css"
  },
  "coc.preferences.rootPatterns": ["composer.json", "package.json", ".git"],
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  "intelephense.telemetry.enabled": false,

  "coc.preferences.formatOnSaveFiletypes": [
    "php",
    "phtml",
    "html",
    "typescript",
    "javascript",
    "json",
    "yaml",
    "vue",
    "gohtmltmpl"
  ],

  "diagnostic-languageserver.filetypes": {
    "css": "stylelint",
    "yaml": "ansible-lint",
    "asterisk": "asterisklint",
    "vim": "vint",
    "sh": "shellcheck",
    "php": ["tidy"],
    "html": ["tidy"],
    "gohtmltmpl": ["tidy"],
    "javascript": ["eslint"],
    "typescript": ["tslint"]
  },

  "git.semanticCommit.filetypes": ["gitcommit", "markdown"],
  "git.enableGlobalStatus": false,
  "coc.source.emoji.filetypes": ["gitcommit", "vim", "vimwiki", "html", "text"],
  "prettier.disableSuccessMessage": true
}
