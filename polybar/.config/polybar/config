[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #fff
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/bottom]
monitor = ${env:MONITOR:}
bottom = true
locale = ru_RU.UTF-8

height = 20

tray-position = right
tray-maxsize = 16

modules-left = i3 xwindow
modules-right = net_l net_w fs_root fs_home temp mem vol battery keyboard weather date

font-0 = "Iosevka term:pixelsize=10;3"
font-1 = "FontAwesome:pixelsize=10;3"

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4
line-color = #f00

padding-left = 0
padding-right = 1
module-margin = 1

[module/net_w]
type = internal/network
interface = wlp1s0

ping-interval = 3

format-connected = <label-connected>
format-connected-prefix = " "
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>

label-connected = %downspeed:7%
label-connected-foreground = #eefafafa
label-disconnected = not connected
label-disconnected-foreground = #66ffffff

animation-packetloss-0 = ⚠
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = 📶
animation-packetloss-1-foreground = #000000
animation-packetloss-framerate = 500

[module/net_l]
type = internal/network
interface = enp1s6

ping-interval = 3

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>

label-connected = %downspeed:7%
label-connected-foreground = #eefafafa
label-disconnected = not connected
label-disconnected-foreground = #66ffffff

animation-packetloss-0 = ⚠
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = 📶
animation-packetloss-1-foreground = #000000
animation-packetloss-framerate = 500

[module/weather]
type = custom/script
label = " %output%"
exec = $HOME/.config/polybar/scripts/weather.sh
interval = 3600

[module/updates]
type = custom/script
label = "%output%"
exec = $HOME/.config/polybar/scripts/updates-arch.sh
interval = 300

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/fs_root]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = / %free%
label-unmounted = %mountpoint% not mounted

[module/fs_home]
type = internal/fs
interval = 25

mount-0 = /home

label-mounted = ~ %free%
label-unmounted = %mountpoint% not mounted

[module/date]
type = internal/date
date = "%d %b, %a %H:%M"

[module/keyboard]
type = internal/xkeyboard
format-background = #666666
format-prefix = " "

[module/battery]
type = internal/battery

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

label-full = 

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

; Only applies if <animation-discharging> is used
animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
; Framerate in milliseconds
animation-discharging-framerate = 500

[module/vol]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = " %percentage%%"
label-muted = 
label-muted-foreground = #66

[module/mem]
type = internal/memory
interval = 2
format-prefix = " "
label = "%percentage_used%%/%percentage_swap_used%%"

[module/temp]
type = internal/temperature
label = " %temperature-c%"
interval = 5

[module/i3]
type = internal/i3
pin-workspaces = true

label-unfocused-background = ${colors.background-alt}
label-unfocused-padding-right = 1
label-focused-background = #888888
label-focused-foreground = #222222
label-focused-padding-right = 1

