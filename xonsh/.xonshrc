# $XONSH_SHOW_TRACEBACK = True
$XONSH_HISTORY_BACKEND = 'sqlite'
#$SHELL_TYPE=prompt_toolkit
$HISTCONTROL='ignoredups'
$TERM='xterm-256color'

$PATH.extend([$HOME + '/.local/bin'])


def _rtn():
    if __xonsh__.history and __xonsh__.history.rtns[-1] > 0:
        return __xonsh__.history.rtns[-1]

def _check_url(url):
    import requests
    r = requests.get(url[0])
    print(r.status_code, int(r.elapsed.total_seconds()*1000), 'ms')

$PROMPT_FIELDS['rtn'] = _rtn

if 'SSH_CLIENT' in ${...}:
    $PROMPT='{RED}{rtn:{} }{GREEN}{user}@{hostname} {CYAN}{cwd}{WHITE}{BACKGROUND_BLACK}{curr_branch: {} }{YELLOW}ткл{RESET} '
else:
    $PROMPT='{RED}{rtn:{} }{CYAN}{cwd}{WHITE}{BACKGROUND_BLACK}{curr_branch: {} }{YELLOW}ткл{RESET} '


aliases['l'] = 'ls'
aliases['ll'] = 'ls -l'
aliases['la'] = 'ls -a'

aliases['ga'] = 'git add'
aliases['gl'] = 'git pull'
aliases['gp'] = 'git push'
aliases['gcam'] = 'git commit -am'

aliases['cu'] = _check_url
aliases['http-here'] = 'python3 -m http.server'

if 'TERMUX_VERSION' in ${...}:
    aliases['pks'] = 'pkg search'
    aliases['pki'] = 'pkg install'
    aliases['pku'] = 'pkg update'
    aliases['pkug'] = 'pkg upgrade'
    launch = p'$PREFIX/../home/storage/shared/termuxlauncher/.apps-launcher'
    if launch.exists():
        source-bash @(launch)
else:
    xontrib load fzf-widgets

    $fzf_history_binding = "c-r"  # Ctrl+R
    $fzf_ssh_binding = "c-s"      # Ctrl+S
    $fzf_file_binding = "c-t"      # Ctrl+T
    $fzf_dir_binding = "c-g"

if $(which nvim):
    aliases['vim'] = 'nvim'

if $(which rsync):
    aliases['cp'] = ['rsync', '--progress', '--recursive', '--archive']
